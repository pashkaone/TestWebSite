<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.RouteLink("Главная", new { controller = "", action = "", id = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>@Html.RouteLink("Контакты", new { controller = "Home", action = "Contact", area = "" }, new { @class = "" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Фичи<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("В работе", new { controller = "", action = "", area = "", id = "1", catchall = "Ну нерабочая ссылка" })</li>
                            <li>@Html.RouteLink("В работе", new { controller = "", action = "", area = "", id = "2", catchall = "И эта тоже" })</li>
                            <li class="divider"></li>
                            <li>@Html.RouteLink("Тест CATCHALL", new { controller = "Home", action = "Index", area = "", id = "777", catchall = "Дополнительная инфа" })</li>
                            <li class="divider"></li>
                            <li>@Html.RouteLink("Прайс", new { controller = "Home", action="Price"})</li>
                        </ul>
                    </li>
                </ul>
                @using (Html.BeginForm("Search", "Home", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
            {
                    <div class="form-group">
                        @Html.TextBox("Query", "", new { @class = "form-control", @placeholder = "Найти..." })
                    </div>
                    <button type="submit" class="btn btn-default">Поиск</button>
                }
                @Html.Partial("_logged")
            </div><!-- /.navbar-collapse -->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – копирайтед</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
