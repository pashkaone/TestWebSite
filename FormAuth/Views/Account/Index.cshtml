@using FormAuth.Models
@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "Пользователи сайта";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Учетные записи
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th>Id</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Год</th>
            <th>Действие</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" class="text-center">Нет ни одной учетной записи</td>
            </tr>
        }
        else
        {
            foreach (ApplicationUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.Year</td>
                    <td>@Html.RouteLink("Редактировать", new { controller = "account", action = "edit", id = user.Id }) | @Html.RouteLink("Удалить", new { controller = "account", action = "delete", id = user.Id })</td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Создать", "Register", null, new { @class = "btn btn-primary" })