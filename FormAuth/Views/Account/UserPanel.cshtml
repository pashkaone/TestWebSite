@{
    ViewBag.Title = "Панель пользователя" + User.Identity.Name;
}
    <div class="jumbotron">
        <h1>Панель управления</h1>
        <h3>Ваш логин: @User.Identity.Name</h3>
        Изменить данные пользователя: @Html.RouteLink("Edit", new { controller = "Account", action = "Edit" })
        <br />
        Вы находитесь в ролях:
        <br />
        @if (Model != null)
        {
            foreach (var role in Model)
            {
                @role <br />
            }
        }
       <hr />
    </div>
<div class="row">
    <div class="col-md-4 text-center">
       Мои посты
    </div>
    <div class="col-md-4 text-center">
        Инфа полезная.
    </div>
    <div class="col-md-4 text-center" >
        @Html.ActionLink("Удалить аккаунт", "Delete")
    </div>
</div>